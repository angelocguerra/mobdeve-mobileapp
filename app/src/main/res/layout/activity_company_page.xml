<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="18dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Intern"
                    android:textColor="@color/french_blue"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvHeader2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_black"
                    android:gravity="center"
                    android:text="SHIP"
                    android:textColor="@color/french_blue"
                    android:textSize="24sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivHeaderLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@drawable/underline" />
        </LinearLayout>

        <!-- Company Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <ImageView
                android:id="@+id/ivCompanyLogo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon"
                android:contentDescription="Company Logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCompanyIndustry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/french_blue"
                    android:textSize="14sp"
                    android:text="Sample Industry"/>

                <TextView
                    android:id="@+id/tvCompanyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/french_blue"
                    android:textSize="20sp"
                    android:text="Company Name"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLocationIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="Location Icon" />

                    <TextView
                        android:id="@+id/tvCompanyLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:text="Location"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llCompanyRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="4dp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCompanyRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:text="4.35"
                            android:textColor="@color/french_blue"
                            android:textSize="12sp">

                        </TextView>

                        <com.iarcuschin.simpleratingbar.SimpleRatingBar
                            android:id="@+id/srbCompanyRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srb_starSize="18dp"
                            app:srb_numberOfStars="5"
                            app:srb_rating="4.35"
                            app:srb_stepSize="0.01"
                            app:srb_starsSeparation="1dp"
                            app:srb_starBorderWidth="3"
                            app:srb_starCornerRadius="4"
                            app:srb_borderColor="@color/french_blue"
                            app:srb_fillColor="@color/chardonnay"
                            android:layout_marginStart="5dp"
                            app:srb_isIndicator="true"
                            />

                        <TextView
                            android:id="@+id/tvCompanyReviewDivider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/inter"
                            android:text="|"
                            android:textColor="@color/french_blue"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/tvCompanyReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/inter"
                            android:text="100"
                            android:textColor="@color/french_blue"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/tvCompanyReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:text=" reviews"
                            android:textColor="@color/french_blue"
                            android:textSize="12sp">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <!-- RecyclerViews -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp" />

    </LinearLayout>

    <!-- Navbar Section -->
    <include
        layout="@layout/navbar"
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
