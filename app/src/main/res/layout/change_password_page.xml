<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Intern"
            android:textSize="24sp"
            android:textColor="@color/french_blue" />

        <TextView
            android:id="@+id/tvHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_black"
            android:text="SHIP"
            android:textSize="24sp"
            android:textColor="@color/french_blue" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvChangePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Change Password"
        android:textSize="20sp"
        android:textColor="@color/french_blue"
        android:layout_marginBottom="16dp" />

    <!-- Current Password Input -->
    <TextView
        android:id="@+id/tvCurrentPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Current Password"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_grey_background"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter current password"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/inter"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- New Password Input -->
    <TextView
        android:id="@+id/tvNewPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="New Password"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_grey_background"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/inter"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Confirm Password Input -->
    <TextView
        android:id="@+id/tvConfirmPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Confirm Password"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_grey_background"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-enter new password"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/inter"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Change Password Button -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/white"
        android:backgroundTint="@color/french_blue"
        android:fontFamily="@font/inter_bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
