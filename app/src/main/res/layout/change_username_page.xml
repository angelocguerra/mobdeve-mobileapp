<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Intern"
                android:textSize="24sp"
                android:textColor="@color/french_blue" />

            <TextView
                android:id="@+id/tvHeader2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_black"
                android:text="SHIP"
                android:textSize="24sp"
                android:textColor="@color/french_blue" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvChangeUsernameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Change Username"
            android:textSize="20sp"
            android:textColor="@color/french_blue"
            android:layout_marginBottom="16dp" />

        <!-- Current Username Display -->
        <TextView
            android:id="@+id/tvCurrentUsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Current Username"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_grey_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvCurrentUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skywalker"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- New Username Input -->
        <TextView
            android:id="@+id/tvNewUsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="New Username"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_grey_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etNewUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new username"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/inter"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Change Username Button -->
        <Button
            android:id="@+id/btnChangeUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Username"
            android:textColor="@color/white"
            android:backgroundTint="@color/french_blue"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
    </ScrollView>

        <!-- Sticky Navbar -->
    <include
    layout="@layout/navbar"
    android:id="@+id/navbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom" />

</FrameLayout>
